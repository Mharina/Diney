                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/P_cars"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical"
